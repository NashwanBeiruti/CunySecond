<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/otherAccent"
    android:orientation="vertical"
    tools:context="com.tareksaidee.cunysecond.Search">

    <Spinner
        android:id="@+id/school_drop_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/class_id_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:gravity="center_vertical"
        android:hint="class ID"
        android:inputType="text"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp" />

    <Button
        android:id="@+id/submit_search_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp"
        android:background="#0077c2"
        android:onClick="startSearch"
        android:padding="20dp"
        android:shadowColor="#111111"
        android:shadowRadius="2"
        android:text="submit"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold" />
</LinearLayout>
